<h1>Eat da burger!</h1>

<h2>burgers ready to eat:</h2>

<div class="container">

<ul>
  {{#each burgers}}
	{{#unless devoured}}
	<span><strong>{{this.id}} - {{this.burger_name}}</strong></span>
	<button type="button" id="eatBtn" data-id="{{this.id}}" data-newDevoured="{{devour}}">eat</button>
    {{/unless}}
  {{/each}}
</ul>

</div>

<h2>burgers you devoured:</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <span><strong>{{this.id}} - {{this.burger_name}}</strong></span>
	  <button type="button" id="trashBtn" data-id="{{this.id}}" data-newDevoured="{{devour}}">delete</button>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burgerTxt" name="name">
  </div>

  <button type="submit" id="addBtn">Add Burger</button>
</form>
