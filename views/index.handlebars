<h1>Eat da burger!</h1>

<h2>Burgers to eat!</h2>

<div class="container">

<ul>
	burgers to eat:
  {{#each burgers}}
	{{#unless devoured}}


	<span><strong>{{this.id}} - {{this.burger_name}}</strong></span>

    {{/unless}}
  {{/each}}
</ul>

</div>

<h2>Burgers you devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burgerTxt" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Ready to eat
  </div>

  <button type="submit" id="addBtn">Add Burger</button>
</form>
